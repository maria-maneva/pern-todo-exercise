{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "rootDir": ".",
    "removeComments": true
  },
  "include": ["."],
  "exclude": ["./notes.txt"]
}
